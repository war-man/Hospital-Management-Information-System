
@model IEnumerable<CaresoftHMISDataAccess.HRPaymentMode>
@{

    ViewBag.Title = "Payment Mode";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<div class="col-md-3">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading custom-navbar">
                <p>@ViewBag.Title</p>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">

                    <form id="country" method="post" action="@Url.Action("SavePaymentModeData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER THE MODES HERE </strong></label>
                        <table class="table-form">
                            <tr>
                                <td><label>Mode Id</label></td>
                                <td>
                                    <input type="text" name="ModeId" class="text-box box-lg " />
                                </td>
                            </tr>
                            <tr>
                                <td><label>Payment Type</label></td>
                                <td>
                                    <input type="text" name="PaymentType" class="text-box box-lg " />
                                </td>

                            </tr>

                        </table>

                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />

                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("PaymentModeGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>











