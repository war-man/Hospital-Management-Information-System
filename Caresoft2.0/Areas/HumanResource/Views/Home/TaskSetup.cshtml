
@model IEnumerable<CaresoftHMISDataAccess.HRRole>
@{

    ViewBag.Title = "Tasks Setup";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";

}
<div class="col-md-2">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-8">
    <div class="">
        <div class="panel panel-primary  caresoft-panel glass">
            <div class="panel-heading">
                Tasks Setup
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <form id="task" method="post" action="@Url.Action("SaveTaskSetupData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE SETUP YOUR TASKS HERE</strong></label>

                        <table>
                            <tr>
                                <td><label>Task Id</label></td>
                                <td>
                                    <input type="number" name="TaskId" class="text-box box-sm " style="margin-bottom:3px" />
                                </td>

                            </tr>

                        </table>
                        <div class="form-group">
                            <label class="info-title col-md-12" for="black_name">Task Description<span><font color="black"><b></b></font></span></label>
                            <span id='message_full_name'></span>
                            <textarea style="width: 50%;height:70px;" name="TaskDescription" class="text-box unicase-form-control text-input" id="extension_number"
                                      placeholder="Enter plan">
                                        
                                    </textarea>
                            <br /><br />
                            <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                        </div>
                    </form>

                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("TaskSetupGrid")
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>












