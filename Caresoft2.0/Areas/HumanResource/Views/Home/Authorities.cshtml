
@model IEnumerable<CaresoftHMISDataAccess.HRManagement>
@{

    ViewBag.Title = "Authorities";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";

}
<div class="col-md-3">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>

<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow caresoft-panel glass">
            <div class="panel-heading">
                Authorities
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <form id="task" method="post" action="@Url.Action("SaveAuthoritiesData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER DIFFERENT ORGANIZATION AUTHORITIES</strong></label>

                        <table class="table-form">
                            <tr>
                                <td><label>Authority Id</label></td>
                                <td>
                                    <input type="number" name="AuthorityId" class="text-box box-sm " style="margin-bottom:3px" />
                                </td>
                            </tr>
                        </table>
                        <div class="form-group">
                            <label class="info-title col-md-12" for="black_name"><strong>AuthorityDescription</strong><span><font color="black"><b></b></font></span></label>
                            <span id='message_full_name'></span>
                            <textarea style="width: 50%;height:70px;" name="AuthorityDescription" class="text-box unicase-form-control text-input" id="extension_number"
                                      placeholder="Enter plan">
                                        
                                    </textarea>
                           
                            <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                        </div>
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("AuthoritiesGrid")
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>












