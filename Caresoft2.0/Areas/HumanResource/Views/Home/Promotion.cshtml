
@model IEnumerable<CaresoftHMISDataAccess.HRPromotion>
@{

    ViewBag.Title = "Promotion";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<div class="col-md-2">
    @Html.Partial("~/Areas/HumanResource/Views/Shared/_InternalCommunicationNav.cshtml")
</div>
@{
    var departments = (List<CaresoftHMISDataAccess.Department>)ViewBag.Departments;
}
<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading custom-navbar">
                <p>@ViewBag.Title</p>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">

                    <form id="country" method="post" action="@Url.Action("SavePromotionData","Home",new {Area="HumanResource"})">

                        <table class="table-form">

                            <tr>
                                <td><label>StaffId</label></td>
                                <td>
                                    <input type="number" name="StaffId" class="text-box box-lg" />
                                </td>
                                <td class="">
                                    <p>Department</p>
                                </td>
                                <td>
                                    <select name="Department" class="text-box box-lg ">
                                        <option>All</option>
                                        @foreach (var r in departments)
                                        {
                                            <option>@r.DepartmentName</option>
                                        }
                                    </select>

                                </td>
                            </tr>
                            </table>
                        <br />
                            <label><strong>Enter Information About The Intended Promotion</strong></label>
                            <table class="table-form">
                            <tr>
                                <td><label>Date</label></td>
                                <td>
                                    <input type="date" name="Date" class="text-box box-lg" />
                                </td>
                                <td><label>Old Position</label></td>
                                <td>
                                    <input type="text" name="OldPosition" class="text-box box-lg" />
                                </td>
                            </tr>
                            <tr>
                                <td><label>New Position</label></td>
                                <td>
                                    <input type="text" name="NewPosition" class="text-box box-lg" />
                                </td>
                                <td><label>Reason</label></td>
                                <td>
                                    <input type="text" name="Reason" class="text-box box-lg" />
                                </td>
                            </tr>
                            <tr>
                                <td><label>New KPI Targets</label></td>
                                <td>
                                    <input type="text" name="NewKPITargets" class="text-box box-lg" />
                                </td>

                            </tr>
                        </table>
                        <div class="form-group">
                            <label class="info-title col-md-12" for="black_name"><strong>Remarks</strong><span><font color="black"><b></b></font></span></label>
                            <span id='message_full_name'></span>
                            <textarea style="width:250px;height:70px;" name="Remarks" class="text-box unicase-form-control text-input" id="extension_number"
                                      placeholder="Enter plan">
                                        
                                    </textarea>
                        </div>
                        <br />

                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("PromotionGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



















