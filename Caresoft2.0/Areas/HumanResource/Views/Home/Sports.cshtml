
@model IEnumerable<CaresoftHMISDataAccess.HRExtraMural>
@{

    ViewBag.Title = "Sport Types";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<div class="col-md-3">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading custom-navbar">
                <p>@ViewBag.Title</p>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">

                    <form method="post" action="@Url.Action("SaveSportsData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER SPORTS TYPES HERE </strong></label>
                        <table class="table-form">
                            <tr>
                                <td><label>Sport Id</label></td>
                                <td>
                                    <input type="number" name="SportId" class="text-box box-lg " />
                                </td>
                                </tr>
                            <tr>
                                <td><label>Sport Name</label></td>
                                <td>
                                    <input type="text" name="SportName" class="text-box box-lg " />
                                </td>
                            </tr>

                        </table>
                        
                            <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                       
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("SportsGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








