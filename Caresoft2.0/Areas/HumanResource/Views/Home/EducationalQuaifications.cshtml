
@model IEnumerable<CaresoftHMISDataAccess.HRStaffEducationQualification>
@{
    var departments = (List<CaresoftHMISDataAccess.Department>)ViewBag.Departments;
    CaresoftHMISDataAccess.CaresoftHMISEntities db = new CaresoftHMISDataAccess.CaresoftHMISEntities();
}
<div class="col-md-12">
    <div class="">
        <div class="panel panel-primary shadow caresoft-panel glass">
            <div class="panel-heading">
                Educational Qualification
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <form  method="post" action="@Url.Action("SaveStaffBioData","Home",new {Area="HumanResource"})">
                        <label> <strong>ENTER THE REQUIRED INFORMATION </strong></label>
                        <table class="table-form">
                            <tr>
                                <td><label>Staff Id</label></td>
                                <td>
                                    <input type="text" name="StaffId" class="text-box box-lg " />
                                </td>

                                <td><label>Qualification Id</label></td>
                                <td>
                                    <input type="text" name="QualificationId" class="text-box box-lg " readonly value="QD/@db.HRStaffEducationQualifications.Count()"/>
                                </td>
                            </tr>
                            <tr>
                            <tr>
                                <td class="">
                                    <p>Department Where Qualification is Required </p>
                                </td>
                                <td>
                                    <select name="Department" class="text-box box-lg ">
                                        <option>All</option>
                                        @foreach (var r in departments)
                                        {
                                            <option>@r.DepartmentName</option>
                                        }
                                    </select>

                                </td>
                                <td><label>Qualification Description</label></td>
                                <td>
                                    <input type="text" name="QualificationDescription" class="text-box box-lg "/>
                                </td>
                            </tr>
                            <tr>
                                <td> <label> <b>Upload Testimonials</b></label> </td>
                                <td>
                                    <input type="file" class="text-box box-lg" id="Filename" value="" name="Filename" />
                                </td>
                            </tr>
                        </table>
                        
                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("EducationalQualificationGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>















