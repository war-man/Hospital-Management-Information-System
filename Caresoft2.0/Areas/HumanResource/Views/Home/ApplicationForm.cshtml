
@model IEnumerable<CaresoftHMISDataAccess.HRApplicationForm>
@{
    ViewBag.Title = "Application Form";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";

}
<div class="col-md-2">
    @Html.Partial("~/Areas/HumanResource/Views/Shared/_JobRequisitionNav.cshtml")
</div>

<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading">
                Application Form
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <form id="application" method="post" action="@Url.Action("SaveApplicationFormData","Home",new {Area="HumanResource"})">

                        <table class="table-form">
                            <tr>
                                <td><label>Applicant Id</label></td>
                                <td>
                                    <input type="text" name="ApplicantId" class="text-box box-lg "/>
                                </td>
                                </tr>
                            <tr>
                                <td><label>Date</label></td>
                                <td>
                                    <input type="date" name="Date" class="text-box box-lg "
                                           />
                                </td>
                            </tr>
                            
                        </table>

                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("ApplicationFormGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>











