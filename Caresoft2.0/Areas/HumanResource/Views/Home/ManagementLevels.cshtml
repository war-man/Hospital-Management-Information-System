
@model IEnumerable<CaresoftHMISDataAccess.HRManagement>
@{
              
                ViewBag.Title = "Authorities";
                ViewBag.showTopMenu = true;
                ViewBag.WideView = true;
                Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";

}
<div class="col-md-3">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow caresoft-panel glass">
            <div class="panel-heading">
                Authorities
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <form  method="post" action="@Url.Action(" SaveManagementLevelsData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER DIFFERENT LEVELS OF MANAGEMENT</strong></label>

                        <table>
                            <tr class="table-form">
                                <td><label>Management Code</label></td>
                                <td>
                                    <input type="number" name="ManagementCode" class="text-box box-lg " style="margin-bottom:3px" />
                                </td>
                                <td><label>Management Level</label></td>
                                <td>
                                    <input type="text" name="ManagementLevel" class="text-box box-lg " style="margin-bottom:3px" />
                                </td>
                            </tr>
                        </table>
                        
                            <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                       
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("ManagementLevelsGrid")
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>












