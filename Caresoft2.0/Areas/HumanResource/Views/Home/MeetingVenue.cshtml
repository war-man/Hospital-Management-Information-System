
@model IEnumerable<CaresoftHMISDataAccess.HRMeetingVenue>
@{

    ViewBag.Title = "Meeting Venues";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<div class="col-md-2">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-8">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading custom-navbar">
                <p>@ViewBag.Title</p>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">

                    <form id="venue" method="post" action="@Url.Action("SaveMeetingVenuesData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER YOUR VENUES HERE</strong></label>

                        <table class="form-class">
                            <tr>
                                <td><label>Venue Id No</label></td>
                                <td>
                                    <input type="number" name="VenueIdNo" class="text-box box-sm " style="margin-bottom:3px" />
                                </td>
                            </tr>
                            <tr>
                                <td><label>Venue Name</label></td>
                                <td>
                                    <input type="text" name="VenueName" class="text-box box-sm" style="margin-bottom:3px" />
                                </td>
                            </tr>

                        </table>

                        <br /><br />
                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />

                    </form>
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("MeetingVenueGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







