
@model IEnumerable<CaresoftHMISDataAccess.HRStaffProfessionalQualification>

<div class="col-md-12">
    <div class="">
        <div class="panel panel-primary shadow caresoft-panel glass">
            <div class="panel-heading">
                Professional Qualification
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    @using (Html.BeginForm("SaveProfessionalQuaificationsData", "Home", new { Area = "HumanResource" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <table class="table-form">
                            <tr>
                                <td><label>Staff Id</label></td>
                                <td>
                                    <input type="text" name="StaffId" class="text-box box-lg " />
                                </td>

                                <td><label>Course</label></td>
                                <td>
                                    <input type="text" name="Course" class="text-box box-lg " />
                                </td>
                            </tr>
                            <tr>
                            <tr>

                                <td><label>DateOfQualification</label></td>
                                <td>
                                    <input type="date" name="DateOfQualification" class="text-box box-lg " />
                                </td>
                                <td><label>Course Title</label></td>
                                <td>
                                    <input type="text" name="CourseTitle" class="text-box box-lg " />
                                </td>
                            </tr>
                            <tr>

                                <td><label>Institution</label></td>
                                <td>
                                    <input type="text" name="Institution" class="text-box box-lg " />
                                </td>
                                <td><label>Grade</label></td>
                                <td>
                                    <input type="text" name="Grade" class="text-box box-lg " />
                                </td>
                            </tr>
                            <tr>
                                <td> <label> <b>Upload Testimonials</b></label> </td>
                                <td>
                                    <input type="file" class="text-box box-lg" id="Filename" value="" name="Filename" />
                                </td>
                            </tr>
                        </table>
                        <div class="form-group">
                            <label class="info-title col-md-12" for="black_name"><strong>Remarks</strong><span><font color="black"><b></b></font></span></label>
                            <span id='message_full_name'></span>
                            <textarea style="width:250px;height:70px;" name="Remarks" class="text-box unicase-form-control text-input" id="extension_number"
                                      placeholder="Enter plan">
                                        
                                    </textarea>
                        </div>

                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                       <br />
                        <br />
                        <div id="ipd-list" class="scrollable-table-container">
                            @Html.Partial("StaffProfessionalQualificationGrid")
                        </div>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>

















