
@model IEnumerable<CaresoftHMISDataAccess.HRRole>
@{
              
                ViewBag.Title = "Roles and Resposibilities";
                ViewBag.showTopMenu = true;
                ViewBag.WideView = true;
                Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";

}
<div class="col-md-3">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
@{
    var departments = (List<CaresoftHMISDataAccess.Department>)ViewBag.Departments;
}

<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow caresoft-panel glass">
            <div class="panel-heading">
                Roles and Resposibilities
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <form id="qualifications" method="post" action="@Url.Action("SaveRolesAndResposibilitiesData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER YOUR ROLES AND RESPOSIBILITIES HERE</strong></label>

                        <table class="table-form">
                            <tr>
                                <td><label>Resposibility Id</label></td>
                                <td>
                                    <input type="number" name="ResposibilityId" class="text-box box-sm " style="margin-bottom:3px" />
                                </td>
                                <td class="">
                                    <p>Department</p>
                                </td>
                                <td>
                                    <select name="Department" class="text-box box-lg ">
                                        <option>All</option>
                                        @foreach (var r in departments)
                                        {
                                            <option>@r.DepartmentName</option>
                                        }
                                    </select>

                                </td>
                            </tr>

                        </table>
                        <div class="form-group">
                            <label class="info-title col-md-12" for="black_name"><strong>Resposibility</strong><span><font color="black"><b></b></font></span></label>
                            <span id='message_full_name'></span>
                            <textarea style="width: 50%;height:70px;" name="Resposibility" class="text-box unicase-form-control text-input" id="extension_number"
                                      placeholder="Enter plan">
                                        
                                    </textarea>
                        </div>
                            <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                        
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("RolesAndResposibilitiesGrid")
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>











