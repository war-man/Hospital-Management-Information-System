                    var age = calculateAge($("#DOB").val());
                    $("#age").val(age.number);
                    $("#ageUnit [value=" + age.unit + "]").prop("selected", true);
                } else {
                    $(formId).find("input[name=" + key + "]").val(value);
                }

            });
        };

