@model IEnumerable<CaresoftHMISDataAccess.HRDemotion>


<table class="table table-data table-condensed">

    <tr>

        <th>
            @Html.DisplayNameFor(model => model.StaffId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OldPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewKPITargets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
    <tbody class="bg-white">
        @foreach (var item in Model.OrderByDescending(e => e.Id))
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.StaffId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OldPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewKPITargets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>

            </tr>
        }
    </tbody>
</table>














