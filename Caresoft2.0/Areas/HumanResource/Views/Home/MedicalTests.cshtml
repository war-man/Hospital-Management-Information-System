
@model IEnumerable<CaresoftHMISDataAccess.HRHealthAndSafety>
@{
               
                ViewBag.Title = "Medical Tests";
                ViewBag.showTopMenu = true;
                ViewBag.WideView = true;
                Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<div class="col-md-2">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-4">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading custom-navbar">
                <p>@ViewBag.Title</p>
            </div>
            <div class="panel-body">
                <div class="col-md-12">

                    <form id="country" method="post" action="@Url.Action("SaveMedicalTestsData","Home",new {Area="HumanResource"})">

                        @*<label> <strong>PLEASE ENTER DISPLINARY ACTION TAKEN </strong></label>*@
                        <table class="table-form">
                            <tr>
                                <td><label>Test Code</label></td>
                                <td>
                                    <input type="number" name="TestCode" class="text-box box-lg " />
                                </td>
                            </tr>
                            <tr>
                                <td><label>Test Description</label></td>
                                <td>
                                    <input type="text" name="TestDescription" class="text-box box-lg " />
                                </td>

                            </tr>
                            <tr>
                                <td><label>Expert Contracted</label></td>
                                <td>
                                    <input type="text" name="ExpertContracted" class="text-box box-lg " />
                                </td>

                            </tr>
                            
                        </table>

                        <br />
                        <br />
                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />

                    </form>
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("MedicalTestsGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>














