
@model IEnumerable<CaresoftHMISDataAccess.HRPerformanceVariable>
@{

    ViewBag.Title = "Performance Variables_KPI Definitions";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<div class="col-md-3">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading custom-navbar">
                <p>@ViewBag.Title</p>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">

                    <form id="country" method="post" action="@Url.Action("SaveExtraCurricularActivityData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER PERFORMANCE VARIABLES HERE </strong></label>
                        <table class="table-form">
                            <tr>
                                <td><label>KPI Id</label></td>
                                <td>
                                    <input type="number" name="KPIId" class="text-box box-lg " />
                                </td>
                                </tr>
                            <tr>
                                <td><label>KPIName</label></td>
                                <td>
                                    <input type="text" name="KPIName" class="text-box box-lg " />
                                </td>
                                <td><label>CompoundIndicator</label></td>
                                <td>
                                    <input type="radio" name="CompoundIndicator" class="text-box box-lg " />
                                </td>
                            </tr>
                            <tr>
                                <td><label>Title 1</label></td>
                                <td>
                                    <input type="text" name="Title1" class="text-box box-lg " />
                                </td>
                                <td><label>Title 2</label></td>
                                <td>
                                    <input type="text" name="Title2" class="text-box box-lg " />
                                </td>
                            </tr>
                            <tr>
                                <td><label>Title 3</label></td>
                                <td>
                                    <input type="text" name="Title3" class="text-box box-lg " />
                                </td>
                                <td><label>Title 4</label></td>
                                <td>
                                    <input type="text" name="Title4" class="text-box box-lg " />
                                </td>
                            </tr>
                        </table>
                        <div class="form-group">
                            <label class="info-title col-md-12" for="black_name"><strong>Remarks</strong><span><font color="black"><b></b></font></span></label>
                            <span id='message_full_name'></span>
                            <textarea style="width: 50%;height:70px;" name="Remarks" class="text-box unicase-form-control text-input" id="extension_number"
                                      placeholder="Enter plan">
                                        
                                    </textarea>

                            <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                        </div>
                        <br />
                    </form>
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("KPIGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








