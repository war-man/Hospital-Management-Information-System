@model IEnumerable<CaresoftHMISDataAccess.HRStaffRegistration>
@using Caresoft2._0.Utils;
<table class="table table-data table-hover table-condensed">
    <tr>
        <th>
            Registration
        </th>

        <th>

            @Html.DisplayNameFor(model => model.StaffId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Salutation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherNames)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            Mobile
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DateOfEmployment)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegDate)
        </th>
       
        <th>
            Registered By
        </th>


    </tr>


    <tbody class="bg-white">
        @foreach (var item in Model.OrderByDescending(e => e.Id))
        {
        <tr>
            <td>
                <div class="class=" panel panel-primary caresoft-panel">
                    <button type="button" class="call-modal-form btn btn-sm btn-primary" data-action="@Url.Action("ApplicantResume","Home",new {Area="HumanResource"})">
                        Staff
                    </button>

                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Salutation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherNames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>

            <td>
                @if (item.DateOfEmployment != null)
                {
                    @item.RegDate.Value.ToString("dd MMM yyyy")
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (item.RegDate != null)
                {
                    @item.RegDate.Value.ToString("dd MMM yyyy")
                }
            </td>

        </tr>
        }
    </tbody>

</table>


