
@model IEnumerable<CaresoftHMISDataAccess.HRJobCategory>
@{

    ViewBag.Title = "Job Category";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";

}
<div class="col-md-3">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>

<div class="col-md-6">
    <div class="">
        <div class="panel panel-primary  caresoft-panel glass">
            <div class="panel-heading">
                Job Category
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <form id="branches" method="post" action="@Url.Action("SaveJobCategoryData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER JOB CATEGORIES HERE</strong></label>

                        <table class="table-form">
                            <tr>
                                <td><label>Job Category Id </label></td>
                                <td>
                                    <input type="number" name="JobCategoryId" class="text-box box-sm " style="margin-bottom:3px" />
                                </td>


                            </tr>
                            <tr>
                                <td><label>Job Category</label></td>
                                <td>
                                    <input type="text" name="JobCategory" class="text-box box-sm " style="margin-right:15px;margin-bottom:3px" />
                                </td>

                            </tr>
                        </table>

                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />
                    </form>
                    <br />
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("CategoryGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







