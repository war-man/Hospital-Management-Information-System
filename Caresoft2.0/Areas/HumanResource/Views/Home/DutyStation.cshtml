
@model IEnumerable<CaresoftHMISDataAccess.HRDutyStation>
@{
    ViewBag.Title = "Duty Station";
    ViewBag.showTopMenu = true;
    ViewBag.WideView = true;
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}
<div class="col-md-2">
    @Html.Partial("~/Areas/HumanResource/Views/_SideNav.cshtml")
</div>
<div class="col-md-8">
    <div class="">
        <div class="panel panel-primary shadow glass caresoft-panel">
            <div class="panel-heading custom-navbar">
                <p>@ViewBag.Title</p>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">

                    <form id="dutystation" method="post" action="@Url.Action("SaveDutyStationData","Home",new {Area="HumanResource"})">

                        <label> <strong>PLEASE REGISTER DUTY STATIONS HERE</strong></label>

                        <table class="form-class">
                            <tr>
                                <td><label>Station Id</label></td>
                                <td>
                                    <input type="number" name="StationId" class="text-box box-sm " style="margin-bottom:3px" />
                                </td>

                                <td><label> Department</label></td>
                                <td>
                                    <input type="text" name="Department" class="text-box box-sm" style="margin-bottom:3px" />
                                </td>
                            </tr>
                            <tr>
                                <td><label>Station Name</label></td>
                                <td>
                                    <input type="text" name="StationName" class="text-box box-sm " style="margin-right:15px;margin-bottom:3px" />
                                </td>
                                <td><label>Geographical Location</label></td>
                                <td>
                                    <input type="text" name="GeographicalLocation" class="text-box box-sm " style="margin-right:15px;margin-bottom:3px" />
                                </td>
                            </tr>
                        </table>

                        <br /><br />
                        <input id="Button1" class="btn btn-sm btn-primary" type="submit" style="margin-right:100px" value="Save" />

                    </form>
                    <div id="ipd-list" class="scrollable-table-container">
                        @Html.Partial("DutyStationGrid")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








