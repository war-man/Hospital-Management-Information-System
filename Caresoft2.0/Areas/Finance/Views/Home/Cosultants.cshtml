
@{
    ViewBag.Title = "Cosultants";
    Layout = "~/Areas/Finance/Views/Shared/_Layout.cshtml";
    ViewBag.ShowTopMenu = true;

}

<div class="col-md-2">
    @Html.Partial("~/Areas/Finance/Views/Shared/_LeftNavigation.cshtml")
</div>

<div class="col-md-8">
    <div class="">
        <div class="panel panel-primary caresoft-panel glass">
            <div class="panel-heading">
                Cosultants
            </div>
            <div class="panel-body">
                <form>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Cash Point:
                                </td>
                                <td>
                                    <input type="text" name="CashPoint" id="CashPoint" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                   &nbsp; Shift No:
                                </td>
                                <td>
                                    <input type="number" name="ShiftNo" id="ShiftNo" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td>
                                    Paid To:
                                </td>
                                <td>
                                    <select name="PaidTo" id="PaidTo" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option value=""></option>
                                    </select>
                                </td>
                                <td>
                                   &nbsp; Payment Date:
                                </td>
                                <td>
                                    <input type="date" name="PaymentDate" id="PaymentDate" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Payment Mode:
                                </td>
                                <td>
                                    <select name="PaymentMode" id="PaymentMode" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option value=""></option>
                                    </select>
                                </td>
                                <td>
                                   &nbsp; Payment Details:
                                </td>
                                <td>
                                    <input type="text" name="PaymentDetails" id="PaymentDetails" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Cheque Number:
                                </td>
                                <td>
                                    <input type="number" name="ChequeNo" id="ChequeNo" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                  &nbsp;  GL Account:
                                </td>
                                <td>
                                    <input type="text" name="GLAccount" id="GLAccount" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr>
                                <td></td>
                                <td>
                                    <label>
                                        <input type="radio" value="Payments" name="PaymentsD" />Payments
                                    </label>
                                    <label>
                                        <input type="radio" name="PaymentsD" value="Deductions" /> Deductions
                                    </label>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <div class="col-md-12">
                        <table class="table table-data-pathology table-condensed">
                            <tr>
                                <th>Visit Date</th>
                                <th>Patient No</th>
                                <th>Patient Name</th>
                                <th>Invoice No</th>
                                <th>Amount</th>
                                <th>Amount Paid</th>
                                <th>Pay?</th>
                            </tr>
                            <tr>
                                <td>
                                    <input type="date" name="VisitDate" id="VisitDate" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="number" name="PatinetNo" id="PatientNo" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="text" name="PatientName" id="PatientName" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="number" name="InvoiceNo" id="InvoiceNo" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="number" name="Amount" id="Amount" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="number" name="AmountPaid" id="AmountPaid" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="radio" name="Paid" id="Paid" value="paid" style="width:100%" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Amount:
                                </td>
                                <td>
                                    <input type="number" name="Amount" id="Amount" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                   &nbsp; Net Deductions:
                                </td>
                                <td>
                                    <input type="number" name="NetDeductions" id="NetDeductions" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Bank Account No:
                                </td>
                                <td>
                                    <select name="BankAccNo" id="BankAccNo" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option value=""></option>
                                    </select>
                                </td>
                                <td>
                                  &nbsp;  Net Pay:
                                </td>
                                <td>
                                    <input type="number" id="NetPay" name="NetPay" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Account Name:
                                </td>
                                <td>
                                    <input type="text" name="AccName" id="AccName" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                   &nbsp; Bank Name:
                                </td>
                                <td>
                                    <input type="text" name="BankName" id="BankName" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" name="Save" class="btn btn-primary bn-sm">Save</button>
                        <button type="reset" name="Clear">Clear</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

