@model IEnumerable<Caresoft2._0.Areas.Procurement.Models.PharmacyRequestedItems>

<table class="table table-data-pathology table-hover table-condensed" id="tblEmployee">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Current Stock</th>
            <th>Required Stock</th>
            <th>Requested To</th>
            <th>Delete</th>

        </tr>
        @*<tr>
            <th><input style="width:100%" class="text-box" type="text" id="ItemName" name="ItemName" /></th>
            <th><input style="width:100%" class="text-box" type="text" id="CurrentStockName" name="CurrentStockName" /></th>
            <th><input style="width:100%" class="text-box" type="text" id="RequiredStock" name="RequiredStock" /></th>
            <th><input style="width:100%" class="text-box" type="text" id="RequestedTo" name="RequestedTo" /></th>
            <th></th>
        </tr>*@

    </thead>
    <tbody style="height:500px;">
        @if (Model.Count()<1)
        {
            <tr>
                <td colspan="5" style="text-align:center;font-style:italic;">No Requested Items to display </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.CurrentStock</td>
                <td>@item.RequiredQuantity</td>
                @if (item.StoreName == "MS")
                {
                    <td>Medical Store</td>
                }
                else
                {
                    <td>General Store</td>
                }


                <td> </td>
            </tr>
            }
        }


    </tbody>
</table>