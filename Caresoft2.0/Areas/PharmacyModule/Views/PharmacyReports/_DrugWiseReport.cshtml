@model IEnumerable<Caresoft2._0.Areas.PharmacyModule.Reports.DrugWiseReport.DrugWiseViewModel>


<table class="table table-data-pathology table-condensed" style="background-color:ghostwhite;">
    <tr>
        <th>Drug Name</th>
        <th>Batch No</th>
        <th>Voucher</th>
        <th>Voucher Date</th>
        <th>Issue To</th>
        <th>Quantity</th>
        <th>Current Stock</th>
        <th>Cost Price</th>
        <th>Selling</th>
        <th>Profit Amount</th>
        <th>Profit</th>
    </tr>
    @if(Model.Count()== 0)
    {
        <tr>
            <td colspan="11" style="text-align:center;font-style:italic">No data to display</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            double profit = Math.Truncate(item.Profit * 100) / 100;
        <tr>
            <td style="word-wrap:break-word;" >@item.DrugName</td>
            <td>@item.BatchNo</td>
            <td>@item.VoucherNo</td>
            <td>@item.VoucherDate</td>
            <td>@item.IssueTo</td>
            <td>@item.Quantity</td>
            <td>@item.CurrentStock</td>
            <td>@item.CostPrice</td>
            <td>@item.SellingPrice</td>
            <td>@item.ProfitAmount</td>
            <td>@profit %</td>
        </tr>
        }
    }


</table>

