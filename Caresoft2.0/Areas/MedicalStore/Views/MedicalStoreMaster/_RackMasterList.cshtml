@model IEnumerable<Caresoft2._0.Areas.Procurement.Models.RackMaster>

<div style="overflow-y:scroll;max-height:500px;">
    <table class="table table-data-pathology table-condensed" style="background-color:ghostwhite;">
        <tr>
            <th>Edit</th>
            <th>Rack Name</th>
            <th>No of Cells</th>
            <th>Delete</th>
        </tr>
        @if (Model.Count() < 1)
        {
            <tr>
                <td colspan="4" style="text-align:center;font-style:oblique;">No Data to display</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td><button class="btn btn-primary btn-xs">Edit</button></td>
                    <td>@item.name</td>
                    <td>@item.totalNumberOfCells</td>
                    <td><button class="btn btn-primary btn-xs">Delete</button></td>
                </tr>

            }
        }

    </table>
</div>