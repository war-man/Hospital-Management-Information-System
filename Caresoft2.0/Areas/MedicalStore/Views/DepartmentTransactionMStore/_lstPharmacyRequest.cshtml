@model IEnumerable<Caresoft2._0.Areas.Procurement.Models.PhamarcyRequests>

<table class="table table-data-pathology table-condensed" style="background-color:white">
    <tr>
        <th>Issue</th>
        <th>Request Form</th>
        <th>Ward No</th>
        <th>Request Date</th>
        <th>Requested By</th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="5" class="text-center"> No data to display</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.PharmacyRequestedItems.Any(e => e.IsIssued == null || e.IsIssued == false))
                    {
                        @Html.ActionLink("Issue", "ViewPharmacyRequestedItems", new { Id = item.Id }, new { @class = "btn btn-xs btn-primary" })
                    }
                    else
                    {
                        @Html.ActionLink("Issued", "ViewPharmacyRequestedItems", new { Id = item.Id }, new { @class = "btn btn-xs btn-success" })
                    }
                </td>
                <td>@item.RequestFrom</td>
                <td>@item.WardNo</td>
                <td>@item.RequestDate</td>
                <td>@item.RequestBy</td>
            </tr>

        }
    }


</table>