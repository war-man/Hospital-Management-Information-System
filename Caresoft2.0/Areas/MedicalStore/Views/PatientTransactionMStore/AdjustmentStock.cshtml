</style>

<div class="col-md-12">
    <div class="panel panel-primary caresoft-panel">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table-form">
                        <tr>
                            <td>
                                <div class="col-md-4" >
