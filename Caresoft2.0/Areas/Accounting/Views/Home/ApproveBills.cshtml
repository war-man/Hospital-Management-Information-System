</div>

@section scripts{

    <script>


        $(window).on('load', function () {
            //$("#fromDate").datepicker({
            //    changeMonth: true,
            //    changeYear: true
            //});

            //$("#toDate").datepicker({
            //    changeMonth: true,
            //    changeYear: true
            //});
            Approve();
        })

        $("#SupplierName").keyup(function () {
            var supplierName = $(this).val().val();

            if (supplierName) {
                var url = "/Home/GetSupplierInvoiceApprovedDisapproved?supplierName=" + supplierName;

                $.ajax({
                    type: "POST",
                    url: url,
                    beforeSend: function () {

                    },
                    success: function (obj) {
                        $("#InvoiceList").empty();
                        $("#InvoiceList").append(obj);
                        Approve();
                    },
                    error: function (x, y, z) {
                        console.log(x.responseText);
                        Approve();
                    }
                });

            }
        })

        $("#fromDate").on('change', function () {
            var fromDate = $(this).val();
            var toDate = $("#toDate").val();

            var dates = { fromDate: fromDate, toDate: toDate };

            //console.log(dates);
            $.ajax({
                type: "POST",
                url: "/Accounting/Home/SearchByDatesInvoiceApprovedDisapproved",
                data: dates,
                beforeSend: function () {
                    $(".loader").show();
                },
                success: function (obj) {
                    $("#InvoiceList").empty();
                    $("#InvoiceList").append(obj);
                    $(".loader").hide();
                    Approve();
                },
                error: function (x, y, z) {
                    console.log(x.responseText);
                    $(".loader").hide();
                    Approve();
                    $.notify("An Error Occured with the request", "error")
                }
            });

        })


        $("#toDate").on('change', function () {
            var fromDate = $("#fromDate").val();
            var toDate = $(this).val();

            var dates = { fromDate: fromDate, toDate: toDate };

            //console.log(dates);
            $.ajax({
                type: "POST",
                url: "/Home/SearchByDatesInvoiceApprovedDisapproved",
                data: dates,
                beforeSend: function () {
                    $(".loader").show();

                },
                success: function (obj) {
                    $("#InvoiceList").empty();
                    $("#InvoiceList").append(obj);
                    $(".loader").hide();
                    Approve();
                },
                error: function (x, y, z) {
                    console.log(x.responseText);
                    $(".loader").hide();
                    Approve();
                    $.notify("An Error Occured with the request", "error")
                }
            });

        })


        function Approve() {
            $(".approve").click(function () {

                var id = $(this).data('id');
                var url = "/Home/ApproveSpecificInvoice?id=" + id;

                $.ajax({
                    type: "POST",
                    url: url,
                    beforeSend: function () {
                        $(".loader").show();
                    },
                    success: function (obj) {
                        $("#InvoiceList").empty();
                        $("#InvoiceList").append(obj);
                        $(".loader").hide();
                        Approve();

                    },
                    error: function (x, y, z) {
                        console.log(x.responseText);
                        $(".loader").hide();
                    }

                });

            })
        }



    </script>

}
























