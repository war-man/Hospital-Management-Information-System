                            <td>
                                <i class="fa fa-square approved"></i> Approved
                            </td>
                            <td>
                                <i class="fa fa-square disapproved"></i> Dis Approved
                            </td>
                        </tr>

                    </table>
                    <div id="InvoiceList">
                        <br />
                        @*@Html.Partial("~/Areas/Accounting/Views/Home/_ApproveBills.cshtml", Model)*@

