                <form>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Begin Date:
                                </td>
                                <td>
                                    <input type="date" name="Begin" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; End Date:
                                </td>
                                <td>
                                    <input type="date" name="End" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12 marg-top-16px">
