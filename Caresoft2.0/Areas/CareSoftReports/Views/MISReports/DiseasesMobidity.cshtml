@model IEnumerable<CaresoftHMISDataAccess.Department>
@{
    ViewBag.Title = "Diseases Mobidity";
    Layout = "~/Areas/CareSoftReports/Views/Shared/_LayoutReports.cshtml";
    ViewBag.ReportName = "Diseases Mobidity";
}

<style>
    .text-box {
        width: 200px;
    }
</style>
<div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-primary glass caresoft-panel">
        <div class="panel-heading">
            <h4>@ViewBag.ReportName</h4>
            Set report filters and click download.
        </div>
        <div class="panel-body">
            <form name="ReportFilter" id="ReportFilter" method="get" action="@Url.Action("GetDiseasesMobilityReport","MISReports",new {Area="CareSoftReports"})">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="row">
                            <label> Select From Date</label>
                            <input class="text-box" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="FromDate" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label> Select End Date</label>
                            <input class="text-box" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="ToDate" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <br />
                    <label> Select Department</label>
                    <select name="Department" id="dept" class="text-box">
                        <option>All</option>
                        @foreach (var item in Model)
                        {
                            <option>@item.DepartmentName</option>
                        }
                    </select>
                </div>
                <div class="col-md-12">
                    <br />
                    <button type="submit" class="btn btn-primary btn-sm" id="btnDownloadReport">Download Diseases Mobidity Report</button>
                </div>
            </form>
        </div>
    </div>
</div>


