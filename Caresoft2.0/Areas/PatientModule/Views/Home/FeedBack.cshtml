
@{
    ViewBag.Title = "FeedBack";
    Layout = "~/Areas/PatientModule/Views/Shared/_Layout.cshtml";
}

<div class="panel-body panel panel-primary">
    <form>
        <div class="form-group">
            <textarea name="Feedback" class="form-control margin-top" style="width:100%"></textarea>
        </div>
        <div class="form-group">
            <p>We appreciate your feedback and we value you. <br /> Please make your feedback anonymous, <br /> don't include your name  or any other personal details</p>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-sm">Send</button>
        </div>
    </form>
</div>
