
@{
    ViewBag.Title = "DonorBloodBankTest";
    ViewBag.ShowTopMenu = true;

}

<div class="col-md-8 col-lg-offset-2">

    <div class="">
        <div class="panel panel-primary caresoft-panel glass">
            <div class="panel-heading">
                Blood Test
            </div>
            <div class="panel-body">
                <form>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Select Blood Bag:
                                </td>
                                <td>
                                    <select name="BloodBag" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Write Blood Bag:
                                </td>
                                <td>
                                    <input type="number" name="Bag" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Donor Name:
                                </td>
                                <td>
                                    <input name="DonorName" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Test Name:
                                </td>
                                <td>
                                    <select name="TestName" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Test Kit:
                                </td>
                                <td>
                                    <select name="TestKit" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Test Results:
                                </td>
                                <td>
                                    <select name="TestResults" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Blood Type:
                                </td>
                                <td>
                                    <input name="BloodType" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Testing Date:
                                </td>
                                <td>
                                    <input type="date" name="TestingDate" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Testing Time:
                                </td>
                                <td>
                                    <input type="time" name="TestingTime" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Technian's Name:
                                </td>
                                <td>
                                    <select name="TechnianName" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Medical Officer Name:
                                </td>
                                <td>
                                    <select name="MedicalOfficer" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Collection Date:
                                </td>
                                <td>
                                    <input type="date" name="CollectionDate" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Discard Date:
                                </td>
                                <td>
                                    <input type="date" name="DiscardDate" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12 marg-top-16px">
                        <button type="submit" class="btn btn-primary btn-sm bn-sm">Save</button>
                        <button type="reset" class="">Clear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

