
@{
    ViewBag.Title = "CampInformation";
    ViewBag.ShowTopMenu = true;

}

<div class="col-md-8 col-lg-offset-2">

    <div class="">
        <div class="panel panel-primary caresoft-panel glass">
            <div class="panel-heading">
                Camp Information Setup
            </div>
            <div class="panel-body">
                <form>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Organizer Name:
                                </td>
                                <td>
                                    <input type="text" name="OrgName" class="text-box margin-top-bottom-2" style="width:100%" required />
                                </td>
                                <td>
                                    &nbsp; Occassion:
                                </td>
                                <td>
                                    <input type="text" name="Occassion" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Address:
                                </td>
                                <td>
                                    <input type="text" name="Address" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp;  Site Address:
                                </td>
                                <td>
                                    <input name="SiteAddress" class="text-box margin-top-bottom-2" style="width:100%" type="text" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Camp Incharge:
                                </td>
                                <td>
                                    <input name="CampIncharge" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Organizer Phone NO:
                                </td>
                                <td>
                                    <input type="tel" name="OrgPhoneNo" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                     Expected Donors:
                                </td>
                                <td>
                                    <input type="number" name="ExpectedDonors" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp;  Phone No:
                                </td>
                                <td>
                                    <input type="tel" name="PhoneNo" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                     No of Males:
                                </td>
                                <td>
                                    <input type="number" name="NoMales" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; No of Females:
                                </td>
                                <td>
                                    <input type="number" name="NoFemales" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                     Camp Date:
                                </td>
                                <td>
                                    <input type="date" name="CampDate" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Camp Time:
                                </td>
                                <td>
                                    <input type="time" name="CampTime" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td>
                                    Area:
                                </td>
                                <td>
                                    <select name="Area" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Facility For Medical examination <br />  &nbsp;
                                    of donors whether seperate rooms
                                    available?
                                </td>
                                <td>
                                    <select name="Facility" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Hygiene:
                                </td>
                                <td>
                                    <select name="Hygiene" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Furniture or Equipments:
                                </td>
                                <td>
                                    <select name="Furniture" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Cleanliness:
                                </td>
                                <td>
                                    <input name="Cleanliness" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Communication system to the central <br />  &nbsp;
                                    office to the organizer?
                                </td>
                                <td>
                                    <select name="Communication" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Electric Supply:
                                </td>
                                <td>
                                    <select name="ElectricSupply" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Refreshment facility for donors and staff?
                                </td>
                                <td>
                                    <select name="RefreshmenFacility" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Adequate Lighting:
                                </td>
                                <td>
                                    <select name="AdequateLighting" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Handwashing Facility for stuff:
                                </td>
                                <td>
                                    <select name="Handwashing" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Proper Disposal of Waste:
                                </td>
                                <td>
                                    <select name="WasteDisposal" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Total number of beds available:
                                </td>
                                <td>
                                    <input name="NoBeds" class="text-box margin-top-bottom-2" type="number" style="width:100%" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12 marg-top-16px">
                        <button type="submit" class="btn btn-primary btn-sm bn-sm">Save</button>
                        <button type="reset" class="">Clear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

