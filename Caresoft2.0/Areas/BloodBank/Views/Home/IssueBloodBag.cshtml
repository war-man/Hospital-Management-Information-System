
@{
    ViewBag.Title = "IssueBloodBag";
    ViewBag.ShowTopMenu = true;

}

<div class="col-md-8 col-lg-offset-2">

    <div class="">
        <div class="panel panel-primary caresoft-panel glass">
            <div class="panel-heading">
                Issue Blood Bag
            </div>
            <div class="panel-body">
                <form>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Name:
                                </td>
                                <td>
                                    <input name="Name" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Id:
                                </td>
                                <td>
                                    <input type="number" name="Id" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Blood Group:
                                </td>
                                <td>
                                    <input name="BloodGroup" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp;  Hospital:
                                </td>
                                <td>
                                    <input name="Hospital" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <table class="table table-data-pathology table-condensed">
                            <tr>
                                <th>Issue Status</th>
                                <th>Blood Bag</th>
                                <th>Blood Type</th>
                                <th>Issue Date</th>
                                <th>Issue No</th>
                                <th>Technician</th>
                                <th>Medical Officer</th>
                                <th></th>
                            </tr>
                            <tr>
                                <td>
                                    <input type="checkbox" name="IssueStatus" value="IssueStatus" />
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <input type="radio" name="Issue" value="AlreadyIssued" /> Already Issued &nbsp;
                        <input type="radio" name="Issue" value="IssuePending" /> Issue Pending
                    </div>
                    <div class="col-md-12 marg-top-16px">
                        <button type="submit" class="btn btn-primary btn-sm bn-sm">Save</button>
                        <button type="reset" class="">Clear</button>
                    </div>
                </form>               
            </div>
        </div>
    </div>
</div>

