
@{
    ViewBag.Title = "BloodComponets";
    ViewBag.ShowTopMenu = true;

}

<div class="col-md-8 col-lg-offset-2">

    <div class="">
        <div class="panel panel-primary caresoft-panel glass">
            <div class="panel-heading">
                Create Blood Components:
            </div>
            <div class="panel-body">
                <form>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Date:
                                </td>
                                <td>
                                    <input type="date" name="Date" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Blood Bag No:
                                </td>
                                <td>
                                    <input name="BloodBagNo" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Blood Group:
                                </td>
                                <td>
                                    <select name="BloodGroup" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Type:
                                </td>
                                <td>
                                    <select name="Type" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                            </tr>
                        </table>
                        <table class="table table-data-pathology table-condensed">
                            <tr>
                                <th>Description</th>
                                <th>Quantity(ml)</th>
                                <th>Component Bag</th>
                                <th>Expiry Date</th>
                            </tr>
                            <tr>
                                <td>
                                    Fresh Frozen Plasma
                                </td>
                                <td>
                                    <input type="number" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="date" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Packed Red Cells
                                </td>
                                <td>
                                    <input type="number" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="date" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Platelets
                                </td>
                                <td>
                                    <input type="number" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    <input type="date" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12 marg-top-16px">
                        <button type="submit" class="btn btn-primary btn-sm bn-sm">Save</button>
                        <button type="reset" class="">Clear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

