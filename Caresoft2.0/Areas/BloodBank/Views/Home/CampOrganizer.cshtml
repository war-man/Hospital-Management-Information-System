
@{
    ViewBag.Title = "CampOrganizer";
    ViewBag.ShowTopMenu = true;


}

<div class="col-md-6 col-lg-offset-2">

    <div class="">
        <div class="panel panel-primary caresoft-panel glass">
            <div class="panel-heading">
                Camp Organizer
            </div>
            <div class="panel-body">
                <form action="/BloodBank/Home/PostCampOrganizer/" method="post" name="CampOrganizer" >
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Org Name:
                                </td>
                                <td>
                                    <input type="text" name="OrgName" class="text-box margin-top-bottom-2" style="width:100%" required />
                                </td>
                            </tr>
                            @*<tr>
                                <td></td>
                                <td>
                                    <input type="checkbox" name="AttachedHosp" /> Attached Hospitals
                                </td>
                            </tr>*@
                            <tr>
                                <td>
                                    Address 1:
                                </td>
                                <td>
                                    <input type="text" name="Address1" class="text-box margin-top-bottom-2" style="width:100%" required />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Address 2:
                                </td>
                                <td>
                                    <input type="text" name="Address2" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Email:
                                </td>
                                <td>
                                    <input type="email" name="Email" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Phone No:
                                </td>
                                <td>
                                    <input type="tel" name="PhoneNo" class="text-box margin-top-bottom-2" style="width:100%" required/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Contact Person:
                                </td>
                                <td>
                                    <input type="text" name="ContactPerson" class="text-box margin-top-bottom-2" style="width:100%" required/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12 marg-top-16px">
                        <button type="submit" class="btn btn-primary btn-sm bn-sm">Save</button>
                        <button type="reset" class="">Clear</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


