
@{
    ViewBag.Title = "PatientBloodGrouping";
    ViewBag.ShowTopMenu = true;

}

<div class="col-md-8 col-lg-offset-2">

    <div class="">
        <div class="panel panel-primary caresoft-panel glass">
            <div class="panel-heading">
                Blood Grouping for Patient
            </div>
            <div class="panel-body">
                <form>
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td>
                                    Select Patient Id:
                                </td>
                                <td>
                                    <select name="PatientId" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp; Patient Name:
                                </td>
                                <td>
                                    <input name="DonorName" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Date:
                                </td>
                                <td>
                                    <input type="date" name="Date" class="text-box margin-top-bottom-2" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Technician:
                                </td>
                                <td>
                                    <select name="Technician" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td>
                                    &nbsp;  Medical Officer:
                                </td>
                                <td>
                                    <select name="MedicalOfficer" class="text-box margin-top-bottom-2" style="width:100%">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td><label><strong>Anti</strong></label></td>
                                <td></td>
                                <td><label><strong>Cells</strong></label></td>
                            </tr>
                            <tr>
                                <td>
                                    Anti A
                                </td>
                                <td>
                                    <input name="AntiA" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp;  A cells
                                </td>
                                <td>
                                    <input name="ACells" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Anti B
                                </td>
                                <td>
                                    <input name="AntiB" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp;  B Cells
                                </td>
                                <td>
                                    <input name="BCells" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Anti AB
                                </td>
                                <td>
                                    <input name="AntiAB" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp;  O Cells
                                </td>
                                <td>
                                    <input name="OCells" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Anti D
                                </td>
                                <td>
                                    <input name="AntiD" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; O Cells Papine
                                </td>
                                <td>
                                    <input name="OCellsPapine" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Anti H
                                </td>
                                <td>
                                    <input name="AntiH" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Serum Group
                                </td>
                                <td>
                                    <input name="SerumGroup" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Anti A1 Lective
                                </td>
                                <td>
                                    <input name="AntiALective" class="text-box margin-top-bottom-2" style="width:100%" />
                                </td>
                                <td>
                                    &nbsp; Cells Group
                                </td>
                                <td>
                                    <input type="radio" name="CellGroup" value="A" /> A
                                    <input type="radio" name="CellGroup" value="Pos" /> Pos
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12 marg-top-16px">
                        <button type="submit" class="btn btn-primary btn-sm bn-sm">Save</button>
                        <button type="reset" class="">Clear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

