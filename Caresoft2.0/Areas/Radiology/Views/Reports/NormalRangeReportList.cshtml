@model IEnumerable<LabsDataAccess.NormalValue>

@{

    ViewBag.Title = "Normal Range Wise Report";

    Layout = "~/Areas/Radiology/Views/Shared/_ReportsLayout.cshtml";

}

<p class="text-center" style="color:red; border-top:solid 2px red; border-bottom:solid 2px red; padding:5px;">Normal Range Wise Report</p>

<p><b>@ViewBag.Department</b></p>
<table  width="100%"class=" table-bordered table-condensed">
    
    <thead>
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th class="text-center"  colspan="2">
                @Html.DisplayName("Age")
            </th>
            <th class="text-center" colspan="2">
                @Html.DisplayName("Range")
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayName("Test Name")
            </th>
            <th>
                @Html.DisplayName("Parameter Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayName("Lower")
            </th>
            <th>
                @Html.DisplayName("Upper")
            </th>
            <th>
                @Html.DisplayName("Lower")
            </th>
            <th>
                @Html.DisplayName("Upper")
            </th>
            <th>
                @Html.DisplayName("Normal Range")
            </th>
            <th>
                @Html.DisplayName("Unit")
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
           
        <tr>
            @if (Model.First() == item)
            {
                <td rowspan="@Model.Count()">
                    @Html.DisplayFor(modelItem => item.LabTest.Test)
                </td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.Parameter1.Parameter_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender1.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lower_Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upper_Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LowerRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpperRange)
            </td>
            <td>
                @Html.Display("Normal Range")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
        </tr>
        }
    </tbody>

</table>
