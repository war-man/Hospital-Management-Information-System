@model IEnumerable<LabsDataAccess.WorkOrder>

@{
    ViewBag.Title = "Authorised Patient List";
    ViewBag.ShowTopMenu = true;
    Layout = "~/Areas/Radiology/Views/Shared/_LayoutRadiology.cshtml";
}

<div class="col-xs-6 col-xs-offset-3">
    <div class="panel panel-primary caresoft-panel">
        <div class="panel-heading" style="height:40px ; ">
            <h5 style="font-weight:bold">Sample Condition</h5>
        </div>

        <div class="panel-body">
            <div class="">

            </div>

            @using (Ajax.BeginForm("AuthorisedPatientList", "Reports", new AjaxOptions
            {
                UpdateTargetId = "list",
                HttpMethod = "get",
                //UpdateTargetId = "TestList",
                OnSuccess = "$('#Message').text('Updated Successfully'); $('#myAlert').removeClass('alert-info alert-success'); $('#myAlert').addClass('alert-success'); ",
                OnFailure = "$('#Message').text('An Error Occured Try again Later'); $('#myAlert').removeClass('alert-info alert-success'); $('#myAlert').addClass('alert-danger'); ",
                LoadingElementId = "loadingElement",
            }))
            {
                <div class="form-group col-xs-6">
                    @Html.Label("From Date", htmlAttributes: new { @class = "col-xs-3" })
                    <div class="col-xs-3">
                        <input type="date" required="required" class="text-box" name="StatDate" id="StatDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <div class="form-group col-xs-6">
                    @Html.Label("To Date", htmlAttributes: new { @class = "col-xs-3" })
                    <div class="col-xs-3">
                        <input type="date" required="required" class="text-box" name="EndDate" id="EndDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <div class="form-group col-xs-6">
                    <div class="col-xs-3 col-xs-offset-3">
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                    </div>
                    <div class="col-xs-3 col-xs-offset-1">
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                    </div>
                </div>

            }

                <div class="" id="list">

                    <table class="table table-bordered table-condensed table-data table-fixed table-header-fixed Radiology-border">
                        <thead class="bg-primary">
                            <tr class="table-primary">
                                <th>
                                    @Html.DisplayName("Reagent Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Patient Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Doc Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Test Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Test User")
                                </th>
                            </tr>
                        </thead>
                        <tbody style="background:white;">
                            <tr>
                                <td colspan="5" class="text-center" style="color:gray;">
                                    No data to display
                                </td>
                            </tr>
                        </tbody>

                    </table>
                </div>
        </div>
    </div>

</div>