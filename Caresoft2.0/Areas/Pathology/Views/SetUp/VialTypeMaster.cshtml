@model LabsDataAccess.VialMaster


@{
    ViewBag.Title = "Sample Master";
    ViewBag.ShowTopMenu = true;
    Layout = ViewBag.Layout;

}

<div class="col-xs-6 col-xs-offset-3">

    <div class="panel panel-primary caresoft-panel">
        <div class="panel-heading" style="height:40px ; ">
            <h5 style="font-weight:bold">@ViewBag.Title</h5>
        </div>

        <div class="panel-body">

            <div style="border: 2px solid #000000; padding:5px; margin:5px; overflow:auto;">
                <b>Please attend to the following:</b>
            </div>

            @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Vial_Type, htmlAttributes: new { @class = "col-xs-2" })
                <div class="col-xs-10">
                    @Html.EditorFor(model => model.Vial_Type, new { htmlAttributes = new { @class = "", style="width:60%" } })
                    @Html.ValidationMessageFor(model => model.Vial_Type, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                    <input type="submit" value="Add" class="btn btn-sm btn-primary" />
                </div>
            </div>
        </div>
}
        <div class="pathology-border" style="background:white;">
            <table class="table table-condensed table-bordered table-data-pathology ">
                <thead>
                    <tr>
                        <th style="width:10%">
                            Edit
                        </th>
                        <th>
                            Vial Type
                        </th>
                        <th style="width:10%">
                            Delete
                        </th>
                    </tr>
                </thead>
                <tbody style="height: 200px; overflow:auto">
                    @foreach (LabsDataAccess.VialMaster v in ViewBag.Vials)
    {
                <tr>
                    <td style="width:10%">
                        @Html.ActionLink("Edit", "EditVial", "SetUp", new { id = v.Id})
                    </td>
                    <td>
                        @v.Vial_Type
                    </td>
                    <td style="width:10%">
                        @Html.ActionLink("Delete", "DeleteVial", "SetUp", new { id = v.Id})
                    </td>
                </tr>
}
                </tbody>
            </table>

        </div>
        </div>
    </div>
</div>
