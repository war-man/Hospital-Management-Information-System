@model IEnumerable<LabsDataAccess.Department>

<table width="100%" class="table-data-pathology table-condensed">
    <tr>
        <th style="white-space:nowrap">
            Edit
        </th>
        <th>
            H Code
        </th>
        <th>
            Heading
        </th>
        <th>
            HOrderNo
        </th>
        <th>
            Remark
        </th>
        <th>
            MainDepartment
        </th>
        <th>
            Modality
        </th>

        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background:white">
            <td>
                @Html.ActionLink("Edit", "EditDepartment", new { id = item.Id }, new { @class = "findDepData", data_Id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department_Order_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                PATHOLOGY
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modality)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "findDepDataDel", data_Id = item.Id })
            </td>
        </tr>
    }


</table>
