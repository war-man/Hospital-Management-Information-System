@model LabsDataAccess.ShortForm


@{
    ViewBag.Title = "Short Form Entry";
    ViewBag.ShowTopMenu = true;
    Layout = ViewBag.Layout;

}

<div class="container">
    <div class="col-xs-offset-3 col-xs-6 CustomLabel">
        <div class=" col-xs-offset-0 col-xs-12">
            <div class="panel panel-primary caresoft-panel">

                <div class="panel-heading">
                    @ViewBag.Title
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm())
    {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Test, "Test", htmlAttributes: new { @class = "col-xs-2" })
                        <div class="col-xs-10">
                            @Html.DropDownList("Test", null, htmlAttributes: new { @class = "text-box", style="width:70%" })
                            @Html.ValidationMessageFor(model => model.Test, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Short_Form, htmlAttributes: new { @class = "col-xs-2" })
                        <div class="col-xs-10">
                            @Html.EditorFor(model => model.Short_Form, new { htmlAttributes = new { @class = "text-box", style = "width:70%" } })
                            @Html.ValidationMessageFor(model => model.Short_Form, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-xs-2" })
                        <div class="col-xs-10">
                            @Html.TextAreaFor(model => model.Description,  new { @class = "text-box", style = "width:70%; height:20vh;"})
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                             
                    <div class="form-group">
                        <div class="col-xs-offset-2 col-xs-10">
                            <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                            <input type="submit" value="Delete" class="btn btn-sm btn-primary" />
                            <input type="button" value="Back" data-dismiss="modal" class="btn btn-sm btn-primary" />
                        </div>
                    </div>
                </div>
}

                </div>
            </div>
        </div>
    </div>
</div>
                 

                