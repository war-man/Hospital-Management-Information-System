@model IEnumerable<CaresoftHMISDataAccess.Branch>
@{
    ViewBag.ShowTopMenu = true;
    ViewBag.Title = "Branches ";
}

<div class="col-md-8 col-md-offset-2">

    <div class="panel panel-primary caresoft-panel ">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body">



            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table table-condensed table-data-pathology" style="background-color:whitesmoke"> 
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BranchInitial)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchInitial)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @* @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                }

            </table>
            </div>
        </div>
</div>