<div class="modal fade " id="toxicityModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <div class="panel panel-primary shadow glass">
                    <div class="panel-heading custom-navbar">
                        <p>Toxicity</p>
                    </div>
                    <div class="panel-body" style="height:40em; overflow-y:scroll;">
                        <table class="table table-bordered">
                            <thead class="bg-primary">
                                <tr>
                                    <th>ADE</th>
                                    <th>Y/N</th>
                                    <th>Duration</th>
                                    <th>Severity</th>
                                    <th>CAUSE</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-primary-row">
                                    <td>Acidity</td>
                                    <td>
                                        <fieldset>
                                            <input type="radio" name="acidity" value="Yes"> Yes
                                            <input type="radio" name="acidity" value="No" checked=""> No
                                        </fieldset>
                                    </td>
                                    <td>
                                        <input type="number" class="text-box" name="acidityDuration" style="width:100%">
                                    </td>
                                    <td>
                                        <select class="text-box" style="width:auto" name="severityAcidity">
                                            <option>High</option>
                                            <option>Low</option>
                                            <option>Medium</option>
                                            <option>Very Good</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" class="text-box" name="acidityDuration" style="width:100%">
                                    </td>
                                </tr>
                                <tr class="table-primary-row">
                                    <td>Cough</td>
                                    <td>
                                        <fieldset>
                                            <input type="radio" name="cough" value="Yes"> Yes
                                            <input type="radio" name="cough" value="No" checked=""> No
                                        </fieldset>
                                    </td>
                                    <td>
                                        <input type="number" class="text-box" name="coughDuration" style="width:100%">
                                    </td>
                                    <td>
                                        <select class="text-box" style="width:auto" name="severityCough">
                                            <option>High</option>
                                            <option>Low</option>
                                            <option>Medium</option>
                                            <option>Very Good</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" class="text-box" name="coughDuration" style="width:100%">
                                    </td>
                                </tr>
                                <tr class="table-primary-row">
                                    <td>Acidity</td>
                                    <td>
                                        <fieldset>
                                            <input type="radio" name="breathlessness" value="Yes"> Yes
                                            <input type="radio" name="breathlessness" value="No" checked=""> No
                                        </fieldset>
                                    </td>
                                    <td>
                                        <input type="number" class="text-box" name="breathlessnessDuration" style="width:100%">
                                    </td>
                                    <td>
                                        <select class="text-box" style="width:auto" name="severityBreathlessness">
                                            <option>High</option>
                                            <option>Low</option>
                                            <option>Medium</option>
                                            <option>Very Good</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" class="text-box" name="breathlessnessDuration" style="width:100%">
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="text-center">
                            <button class="btn btn-sm btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




