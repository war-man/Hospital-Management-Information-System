                                {
                                    <span>OPD</span>
                                }
                                @Html.DisplayFor(modelItem => item.Department)
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.PatientReferals.LastOrDefault().Department.DepartmentName)
                            }



