                            {
                                var tests = labDb.WorkOrderTests.Include(a => a.WorkOrder1).Where(e => e.WorkOrder1.OPDNo == item.Id);

                                if (tests != null && tests.Any(e => e.Status1.StatusValue.Trim().ToLower().Equals("authorized")))
