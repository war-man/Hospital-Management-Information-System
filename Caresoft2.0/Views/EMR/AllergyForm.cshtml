
<div class="panel panel-primary  shadow glass caresoft-panel" style="margin-bottom:-1em;">
    <div class="panel-heading caresoft-panel">
        Allergies Details
    </div>
    <div class="panel-body">
        <div class="form-horizontal">



            <div class="form-group">
                <label class="control-label col-md-2" for="Type">Type</label>
                <div class="col-md-10">
                    <select class="text-box" id="FoodType" name="FoodType">
                        <option value="1">Medical</option>
                    </select>
                    <span class="field-validation-valid text-danger" data-valmsg-for="Type" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ItemName">Item Name</label>
                <div class="col-md-10">
                    <input class="text-box text-box single-line" id="ItemName" name="ItemName" type="text" value="">
                    <span class="field-validation-valid text-danger" data-valmsg-for="ItemName" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Since">Since</label>
                <div class="col-md-10">
                    <input class="text-box text-box single-line" data-val="true" data-val-number="The field Since must be a number." data-val-required="The Since field is required." id="Since" name="Since" style="width:50px" type="number" value="">
                    <span class="field-validation-valid text-danger" data-valmsg-for="Since" data-valmsg-replace="true"></span>
                    <span class="patient-details" style="padding: .5em;">
                        <input type="radio" checked="" name="SinceUnit" value="Days"> Days
                        <input type="radio" name="SinceUnit" value="Month"> Month
                        <input type="radio" name="SinceUnit" value="Year"> Year
                    </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">

                    <input class="text-box collapse text-box single-line" data-val="true" data-val-number="The field SinceUnit must be a number." data-val-required="The SinceUnit field is required." id="SinceUnit" name="SinceUnit" type="number" value="">

                    <span class="field-validation-valid text-danger " data-valmsg-for="SinceUnit" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="SignsAndSymptoms">Signs/Symptoms</label>
                <div class="col-md-10">
                    <textarea class="text-box" cols="20" htmlattributes="{ class = text-box }" id="SignsAndSymptoms" name="SignsAndSymptoms" rows="2" style="height:120px; width:320px;"></textarea>
                    <span class="field-validation-valid text-danger" data-valmsg-for="SignsAndSymptoms" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Severeity">Severeity</label>
                <div class="col-md-10">
                    <select class="text-box" id="Severity" name="Severity">
                        <option value="1">Medical</option>
                    </select>
                    <span class="field-validation-valid text-danger" data-valmsg-for="Severeity" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Date">Date</label>
                <div class="col-md-10">
                    <input class="text-box text-box single-line" data-val="true" data-val-date="The field Date must be a date." data-val-required="The Date field is required." id="Date" name="Date" type="date" value="">
                    <span class="field-validation-valid text-danger" data-valmsg-for="Date" data-valmsg-replace="true"></span>
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default">
                </div>
            </div>
        </div>
    </div>
</div>