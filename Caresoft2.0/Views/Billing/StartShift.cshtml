@{
    ViewBag.ShowTopMenu = true;
}


<div class="col-xs-4 col-sm-offset-4">
    <div class="panel panel-primary caresoft-panel ">
        <div class="panel-heading">
            Starting a new shift
        </div>
        <div class="panel-body">
            @if(ViewBag.LogginError != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.LogginError
                </div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
            <form action="StartShift" method="POST">
                
                <div class="form-group">
                    <label for="email">Username:</label>
                    <input type="text" class="form-control" name="ShiftUsername" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" name="ShiftPassword"  autocomplete="off">
                </div>

                <button type="submit" class="btn btn-primary" id="login-user">Proceed</button>
            </form>
        </div>
    </div>
</div>
