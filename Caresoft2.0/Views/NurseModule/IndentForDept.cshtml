
@{
    ViewBag.Title = "Request For Nurse Station";
    Layout = "~/Views/Shared/_NurseModuleLayout.cshtml";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-primary caresoft-panel">
            <div class="panel-heading">
                Request For Nurse Station
            </div>
            <div class="panel-body">
                <table class="table-form">
                    <tr>
                        <td>
                            <label>Request Type</label>
                        </td>
                        
                        <td class="text-box">
                            <label><input type="radio" name="RequestType" value="Department"  /> Department</label>
                            <label><input type="radio" name="RequestType" value="Nurse Station" checked /> Nurse Station</label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <fieldset style="height:270px; overflow-y:auto;  padding:.4em;">
                                <table class="table table-data table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Item Name</th>
                                            <th>Current Stock</th>
                                            <th>Batch No</th>
                                            <th>Expiry Date</th>
                                            <th>Rack Name</th>
                                            <th>Cell No</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white">
                                        <tr>
                                            <td colspan="6" align="center">
                                                <label>No data at the moment</label>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </fieldset>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <a href="#" class="call-modal-form btn btn-sm btn-primary" data-opd="0" data-action="RequestForNurseStationForm" >New Request</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>